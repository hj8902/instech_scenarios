{
  "id": "counsel-edge-user-edit-submit-disabled",
  "name": "'수정 완료' 버튼 disabled 상태 (미수정/에러)",
  "type": "test",
  "requiresAuth": true,
  "variables": [
    "baseUrl",
    "entryType"
  ],
  "defaults": {
    "entryType": "OTHER"
  },
  "precondition": "유저 프로필에 성별 정보가 있는 상태",
  "description": "정보 수정 → 변경 없음 → disabled → 잘못된 입력 → disabled",
  "steps": [
    {
      "action": "loadState",
      "description": "저장된 인증 상태 로드"
    },
    {
      "action": "navigate",
      "url": "{{baseUrl}}",
      "description": "세션 스토리지 설정을 위해 기본 페이지로 이동"
    },
    {
      "action": "setSessionStorage",
      "key": "__instech_counsel_entry__",
      "value": "{{entryType}}",
      "description": "EntryType 설정"
    },
    {
      "action": "navigate",
      "url": "{{baseUrl}}/counsel/topics",
      "description": "앱 로드"
    },
    {
      "action": "waitForNavigation",
      "description": "페이지 로딩 대기"
    },
    {
      "action": "fetchAndInjectUserInfo",
      "store": "COUNSEL",
      "description": "유저 정보 주입"
    },
    {
      "action": "navigate",
      "url": "{{baseUrl}}/counsel/user-edit/Phone",
      "description": "정보 수정 페이지로 직접 이동 (Phone)"
    },
    {
      "action": "waitForNavigation",
      "description": "페이지 로딩 대기"
    },
    {
      "action": "screenshot",
      "description": "초기 상태 (수정 전)"
    },
    {
      "action": "expect",
      "type": "disabled",
      "selector": "button:has-text('수정 완료')",
      "description": "'수정 완료' 버튼 disabled (변경 없음)"
    },
    {
      "action": "fill",
      "selector": "input[placeholder='이름']",
      "value": "",
      "description": "이름 초기화"
    },
    {
      "action": "fill",
      "selector": "input[placeholder='이름']",
      "value": "김John",
      "description": "잘못된 이름 입력"
    },
    {
      "action": "blur",
      "selector": "input[placeholder='이름']",
      "description": "이름 blur"
    },
    {
      "action": "waitForTimeout",
      "timeout": 500
    },
    {
      "action": "expect",
      "type": "disabled",
      "selector": "button:has-text('수정 완료')",
      "description": "'수정 완료' 버튼 disabled (유효성 에러)"
    },
    {
      "action": "screenshot",
      "description": "유효성 에러 + disabled 상태"
    }
  ],
  "category": "edge"
}
